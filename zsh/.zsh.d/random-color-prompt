# ramdom prompt
if [ "$TERM" = "screen" ]; then
    local Mode=$[ $RANDOM % 3 ]
    local Color=$[ $RANDOM % 6 ]
    local RandomColor=$'%{\e[$Mode;$[31+$Color]m%}'
    local Default=$'%{\e[1;m%}'
    setopt PROMPT_SUBST
    PROMPT=${RandomColor}${PROMPT}${Default}
    if [ "x${RPROMPT}" != "x" ]; then
        RPROMPT=${RandomColor}${RPROMPT}${Default}
    fi
fi

