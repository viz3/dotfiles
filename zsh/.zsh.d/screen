# print latest executed command on screen status bar
if [ "$TERM" = "screen" ]; then
    local -a host
    if [ "x`virtualname 2>/dev/null`" = "x" ]; then
        host=`/bin/hostname -s`
    else
        host=`virtualname`
    fi
    preexec() {
        # see [zsh-workers:13180]
        # http://www.zsh.org/mla/workers/2000/msg03993.html
        emulate -L zsh
        local -a cmd; cmd=(${(z)2})
            echo -n "k$host:$cmd[1]:t\\"
    }
fi
